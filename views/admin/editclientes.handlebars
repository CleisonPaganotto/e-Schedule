            <input type="text" class="form-control" id="rua" name="rua" placeholder="Rua" onkeyup="setCustomValidity('')"" required oninvalid="this.setCustomValidity('Informe  Rua do cliente!!')" value="{{cliente.rua}}">
            <label for="bairro">Bairro</label>
            <input type="text" class="form-control" id="bairro" name="bairro" placeholder="Bairro" onkeyup="setCustomValidity('')"" required oninvalid="this.setCustomValidity('Informe o Bairro do cliente!!')" value="{{cliente.bairro}}">
            <label for="numero">Numero</label>
            <input type="text" class="form-control" id="numero" name="numero" placeholder="Numero" onkeyup="setCustomValidity('')"" required oninvalid="this.setCustomValidity('Informe o Numero do cliente!!')" value="{{cliente.numero}}">
        </div>
        <button type="submit" class="btn btn-success" style="width: 150px;">Editar Cliente</button>
        <a href="/admin/clientes"><button type="button" class="btn btn-danger"
                style="width: 150px;">Cancelar</button></a>
    </div>
</form>