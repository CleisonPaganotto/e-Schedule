            <label for="cpf">CPF</label>
            <input type="text" class="form-control" id="cpf" name="cpf" placeholder="CPF" onkeyup="setCustomValidity('')"" required oninvalid="this.setCustomValidity('Informe o CPF do cliente!!')" value="{{cliente.cpf}}">
        </div>
        <div class="form-group alert border border-dark">
            <h5>Endere√ßo</h5>
