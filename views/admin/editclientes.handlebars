            <label for="estado">Estado</label>
            <input type="text" class="form-control" id="estado" name="estado" placeholder="Estado" onkeyup="setCustomValidity('')"" required oninvalid="this.setCustomValidity('Informe o Estado do cliente!!')" value="{{cliente.estado}}">
